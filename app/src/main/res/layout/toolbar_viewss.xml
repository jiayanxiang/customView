<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mToolbarContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_view_height"
    android:background="@color/status_bar_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toolbar_ll"
        android:layout_width="match_parent"
        android:background="@color/status_bar_color"
        android:layout_height="wrap_content">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/status_bar_color"
            android:popupTheme="@style/toolbar.theme"
            android:theme="@style/toolbar.theme"
            app:title=""
            app:titleTextColor="@color/white">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/right_icon_iv2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:src="@drawable/search_icon_01"
                    android:tint="@color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/right_icon_iv"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:src="@drawable/share_icon_01"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/search_ll"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_rectangle_white"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/search_icon_01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/please_enter_search_content"
                    android:textColor="@color/status_bar_color"
                    android:textSize="12dp" />
            </LinearLayout>

        </Toolbar>
    </LinearLayout>

</LinearLayout>

